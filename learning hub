    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Search functionality
        document.querySelector('button[class*="bg-blue-600"]').addEventListener('click', function() {
            const grade = document.querySelector('select').value;
            const subject = document.querySelectorAll('select')[1].value;
            const topic = document.querySelector('input[type="text"]').value;
            
            if (grade || subject || topic) {
                alert(`Searching for:\nGrade: ${grade || 'Any'}\nSubject: ${subject || 'Any'}\nTopic: ${topic || 'Any'}\n\nResults would appear here in a real implementation!`);
            } else {
                alert('Please select at least one search criteria.');
            }
        });

        // Interactive buttons for sections
        document.querySelectorAll('.card-hover button').forEach(button => {
            button.addEventListener('click', function() {
                const section = this.closest('.card-hover').querySelector('h3').textContent;
                const action = this.textContent.trim();
                
                if (action.includes('View All') || action.includes('Browse') || action.includes('Explore') || action.includes('Join')) {
                    alert(`Opening ${section} section...\nThis would navigate to the full ${section.toLowerCase()} page in a real implementation!`);
                } else if (this.querySelector('.fa-download')) {
                    alert('Download started! File would be downloaded in a real implementation.');
                } else if (this.querySelector('.fa-play')) {
                    alert('Activity launched! Interactive content would open in a real implementation.');
                } else if (this.querySelector('.fa-eye')) {
                    alert('Resource opened! Content would be displayed in a real implementation.');
                }
            });
        });

        // Admin login button
        document.querySelector('button:contains("Admin Login")') || document.querySelectorAll('button').forEach(btn => {
            if (btn.textContent.includes('Admin Login')) {
                btn.addEventListener('click', function() {
                    alert('Admin login would redirect to secure authentication page.\nNote: This is a demo - actual admin features would require backend implementation.');
                });
            }
        });

        // Rotating quotes
        const quotes = [
            {
                text: "Education is the most powerful weapon which you can use to change the world.",
                author: "Nelson Mandela"
            },
            {
                text: "The beautiful thing about learning is that no one can take it away from you.",
                author: "B.B. King"
            },
            {
                text: "Education is not preparation for life; education is life itself.",
                author: "John Dewey"
            },
            {
                text: "The more that you read, the more things you will know.",
                author: "Dr. Seuss"
            }
        ];

        let currentQuote = 0;
        setInterval(() => {
            const quoteElement = document.querySelector('.quote-animation');
            if (quoteElement) {
                currentQuote = (currentQuote + 1) % quotes.length;
                quoteElement.innerHTML = `
                    <p class="text-2xl font-medium text-gray-700 italic">"${quotes[currentQuote].text}"</p>
                    <p class="text-green-600 font-semibold mt-2">- ${quotes[currentQuote].author}</p>
                `;
            }
        }, 8000);
    </script>
